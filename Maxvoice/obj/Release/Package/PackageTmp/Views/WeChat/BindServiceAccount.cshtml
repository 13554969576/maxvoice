<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1,user-scalable=0">
    <title>Bind Account</title>
    <link rel="stylesheet" href="/css/weui.css" />
</head>
<body>
    <div class="weui_cells_title">Bind Your Account</div>
    <form method="post" action="doBindServiceAccount" enctype="multipart/form-data">
        <div class="weui_cells weui_cells_form">
            <div class="weui_cell">
                <div class="weui_cell_hd">
                    <label class="weui_label" style="width:85px">First Name</label>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="" name="firstName" required>
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_hd">
                    <label class="weui_label"  style="width:85px">Last Name</label>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input" type="text" placeholder="" name="lastName" required>
                </div>
            </div>
            <div class="weui_cell">
                <div class="weui_cell_hd">
                    <label class="weui_label" style="width:85px">Mobile</label>
                </div>
                <div class="weui_cell_bd weui_cell_primary">
                    <input class="weui_input"  type="tel" placeholder="" required name="mobile">
                </div>
            </div>
        </div>
        <input type="hidden" name="openId" value="@ViewData["openId"]" />
        <a href="javascript:document.forms[0].submit();" class="weui_btn weui_btn_primary">Submit</a>
    </form>
</body>
</html>
